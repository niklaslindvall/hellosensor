<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="se.bitterhet.hellosensor.AccelerometerActivity"
    tools:showIn="@layout/activity_accelerometer"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accelerometer values:"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        />

    <TextView
        android:id="@+id/text_x"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="X:"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        />
    <TextView
        android:id="@+id/text_y"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Y:"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        />
    <TextView
        android:id="@+id/text_z"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Z:"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        />
    <TextView
        android:id="@+id/text_direction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Accelerometer values:"
        android:gravity="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        />

</LinearLayout>
